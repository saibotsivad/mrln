{
  "name": "demo",
  "private": true,
  "type": "module",
  "scripts": {
    "postinstall": "mrln"
  },
  "mrln": {
    "prefix": "@",
    "links": [
      "service/*/package.json"
    ],
    "root": {
      "shared": "_shared"
    },
    "folder": {
      "lib": "_lib"
    },
    "jsconfig": {
      "auto": true,
      "indent": "\t",
      "compilerOptions": {
        "rootDirs": [
          "./"
        ],
        "moduleResolution": "node",
        "module": "es6",
        "target": "es6"
      }
    }
  }
}
